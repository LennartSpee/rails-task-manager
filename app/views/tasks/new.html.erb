<h1>Enter your task</h1>
<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.checkbox :completed %>
  <%= f.submit %>
<% end %>
<li><%= link_to "back to tasks", tasks_path %></li>
