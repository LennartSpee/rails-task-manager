<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<li><%= link_to "edit task", edit_task_path(@task) %></li>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<li><%= link_to "back to tasks", tasks_path %></li>
